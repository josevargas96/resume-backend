{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "builder": "DOCKERFILE",
      "dockerfilePath": "Dockerfile"
    },
    "deploy": {
      "region": "us-west2",
      "runtime": "V2",
      "numReplicas": 1,
      "startCommand": "uvicorn src.howdoyoufindme.main:app --host 0.0.0.0 --port $PORT",
      "sleepApplication": false,
      "multiRegionConfig": {
        "us-west2": {
          "numReplicas": 1
        }
      },
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }